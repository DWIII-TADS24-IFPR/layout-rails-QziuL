<nav class="bg-gray-800 text-white shadow-lg">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex justify-between items-center h-16">

      <div class="flex items-center space-x-6">
        <%= link_to "Meu Blog", root_path, class: "font-bold text-xl hover:text-gray-300 transition-colors" %>
        
        <ul class="flex items-baseline space-x-4">
          <li>
            <%= link_to "Posts", posts_path, class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700 transition-colors" %>
          </li>
          <li>
            <%= link_to "Comentários", comments_path, class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700 transition-colors" %>
