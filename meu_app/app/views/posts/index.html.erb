<% content_for :title, "Posts" %>

<div class="bg-gray-100 dark:bg-gray-900 rounded-xl mb-10">
  <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">

    <div class="flex justify-between items-center mb-8">
      <h1 class="text-4xl font-bold text-gray-800 dark:text-white">
        Minhas Postagens
      </h1>
      <%= link_to "Nova Postagem", new_post_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>

    <% if @posts.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @posts.each do |post| %>
          <div class="group bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transform hover:-translate-y-1 transition-transform duration-300">
            <%= link_to post, class: "block p-6" do %>
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white group-hover:text-blue-600 transition-colors">
                <%= post.title %>
              </h2>
              <p class="mt-2 text-gray-600 dark:text-gray-400">
                 <%= truncate(post.content, length: 100) %>
              </p>
              <p class="mt-4 text-sm font-medium text-blue-500">
                Ver postagem â†’
              </p>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16 px-4 bg-white dark:bg-gray-800 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-gray-700 dark:text-gray-200">Nenhuma postagem encontrada!</h2>
        <p class="mt-2 text-gray-500 dark:text-gray-400">Que tal criar a sua primeira agora?</p>
      </div>
    <% end %>

  </div>
</div>
