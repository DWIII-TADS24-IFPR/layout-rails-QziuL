<%= form_with(model: post, class: "space-y-6 max-w-md mx-auto bg-white p-6 rounded shadow") do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg relative mb-6" role="alert">
      <strong class="font-bold"><%= pluralize(post.errors.count, "erro") %> impediram que este post fosse salvo:</strong>
      <ul class="list-disc list-inside mt-2">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Título", class: "block text-gray-700 font-semibold mb-2" %>
    <div class="mt-2">
      <%= form.text_field :title, class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <div>
    <%= form.label :content, "Conteúdo", class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_area :content, rows: 4, class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="text-center">
    <%= form.submit "Salvar", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition cursor-pointer" %>
  </div>
<% end %>