<% content_for :title, "Editing comment" %>

<div class="bg-gray-100 dark:bg-gray-900 rounded-xl p-6">
  <h1 class="text-2xl text-center font-bold mb-6 text-white">Editar comentário</h1>
  <%= render "form", comment: @comment %>

  <div class="flex flex-col sm:flex-row gap-4 mt-8 justify-center">
    <%= link_to "Ver detalhes do comentário", @comment, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg shadow transition-colors duration-200 text-center" %> |
    <%= link_to "Voltar aos comentários", comments_path, class: "bg-gray-700 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg shadow transition-colors duration-200 text-center" %>
  </div>
</div>

