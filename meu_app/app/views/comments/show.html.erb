<%# Aviso %>
<% if notice %>
  <div class="mb-4 p-2 rounded bg-green-100 text-green-800 text-sm dark:bg-green-900 dark:text-green-200">
    <%= notice %>
  </div>
<% end %>

<%# Card do comentário %>
<div class="max-w-md mx-auto bg-white shadow-lg rounded-lg overflow-hidden border border-gray-200 dark:bg-gray-800 dark:border-gray-700">
  <div class="bg-gray-100 px-6 py-4 dark:bg-gray-900">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Detalhes do Comentário</h1>
  </div>
  <div class="p-6">
    <h2 class="text-lg font-semibold text-gray-800 mb-2 dark:text-gray-200">
      Postagem: <span class="font-normal dark:text-gray-300"><%= @comment.post.title %></span>
    </h2>
    <p class="text-gray-700 mb-4 dark:text-gray-300">
      <b>Comentário:</b>
      <%= @comment.content %>
    </p>
    <div class="flex space-x-2">
      <%= link_to "Editar", edit_comment_path(@comment), class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 text-sm dark:bg-blue-700 dark:hover:bg-blue-800" %>
      <%= button_to "Deletar", @comment, method: :delete, data: { confirm: "Tem certeza?" }, class: "px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 text-sm dark:bg-red-700 dark:hover:bg-red-800" %>
      <%= link_to "Voltar", comments_path, class: "px-4 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400 text-sm dark:bg-gray-700 dark:text-gray-200 dark:hover:bg-gray-600" %>
    </div>
  </div>
</div>
